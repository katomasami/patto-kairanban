<div>
  <p>タイトル：<%= @notice.title %></p>
  <p>本文：<%= @notice.body %></p>
  <%= image_tag @notice.get_image %>
  <p><%= image_tag @notice.user.get_profile_image(100,100) %><%= @notice.user.name %></p>
  <p>投稿日：<%= @notice.created_at.strftime('%Y/%m/%d') %></p>
  <% if @notice.user == current_user %>
    <%= link_to "編集", edit_notice_path(@notice) %>
    <%= link_to "削除", notice_path(@notice), method: :delete %>
  <% end %>
</div>